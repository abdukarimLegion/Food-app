<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SecondActivity_add_meal">

    <LinearLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#22E286"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="14dp"
            android:text="Taom qo'shish"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/taom_name_edit"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Taom nomi"
            android:paddingLeft="21dp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="32dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/items_name_edit"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top|left"
            android:hint="Kerakli mahsulotlar"
            android:minLines="10"
            android:overScrollMode="always"
            android:paddingLeft="21dp"
            android:scrollbars="vertical" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="32dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/preparing_name_edit"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:gravity="top|left"
            android:hint="Taom tayyorlash tartibi"
            android:minLines="30"
            android:overScrollMode="always"
            android:paddingLeft="21dp"
            android:scrollbars="vertical" />
    </com.google.android.material.textfield.TextInputLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="22dp"
        android:layout_marginRight="32dp"
        android:elevation="4dp"
        app:cardCornerRadius="5dp">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="166dp"
            android:layout_height="70dp"
            android:backgroundTint="#22E286"
            android:text="@string/saqlash"
            android:textAllCaps="false"
            android:textSize="17sp" />


    </androidx.cardview.widget.CardView>
</LinearLayout>